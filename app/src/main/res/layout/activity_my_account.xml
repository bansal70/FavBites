<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.favbites.view.MyAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="#2A2736"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="@string/location"
            android:foreground="@drawable/selectable_item_background"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Profile"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="@dimen/_20ssp" />

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="@string/location"
            android:foreground="@drawable/selectable_item_background"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/edit" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/demo_img"
            android:scaleType="centerCrop"
            android:contentDescription="@null"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfilePic"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="@dimen/_2sdp"
                android:src="@drawable/demo_img" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_icon_edit_profile"
                android:layout_alignBottom="@+id/imgProfilePic"
                android:layout_alignRight="@+id/imgProfilePic"
                android:layout_alignEnd="@+id/imgProfilePic"
                android:contentDescription="@null"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorHome">

        <TextView
            android:id="@+id/tvFollowers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textColor="#fff"
            android:foreground="@drawable/selectable_item_background"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_18ssp"
            android:layout_weight="1"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="#fff"/>

        <TextView
            android:id="@+id/tvFollowing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Following"
            android:textColor="#fff"
            android:foreground="@drawable/selectable_item_background"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_18ssp"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorHome"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Info"
        android:padding="@dimen/_10sdp"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:textColor="#000"
        android:textSize="@dimen/_18ssp"/>

    <LinearLayout
        android:id="@+id/editProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorHome"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:textColorHint="#fff"
                android:padding="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:textColor="#fff"
                android:inputType="text"
                android:textSize="@dimen/_18ssp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:padding="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:textColorHint="#fff"
                android:inputType="text"
                android:textSize="@dimen/_18ssp"
                android:textColor="#fff"
                android:layout_weight="1"/>

        </LinearLayout>

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#fff"
            android:padding="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"
            android:textSize="@dimen/_18ssp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tvChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/change_password"
            android:foreground="@drawable/selectable_item_background"
            android:textSize="@dimen/_18ssp"
            android:padding="@dimen/_10sdp"
            android:clickable="true"
            android:textColorHint="#fff" />

    </LinearLayout>

</LinearLayout>
